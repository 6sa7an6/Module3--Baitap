create database Quanlybanhang;
use quanlybanhang;
create table customer(
cid bigint primary key auto_increment,
cName varchar(100) unique,
cAge int
);
create table orders(
oid bigint primary key auto_increment,
odate date not null,
ototalprice double check (ototalprice>0),
cid bigint not null,
constraint fk_cid foreign key(cid) references customer(cid)
);
create table product (
pid bigint primary key auto_increment,
pname varchar(100) unique,
pprice double check(pprice>0)
);
create table orderdetail(
oid bigint ,
pid bigint ,
odQTY int check (odQTY>0),
primary key (oid,pid),
constraint fk_oid foreign key (oid) references orders(oid),
constraint fk_pid foreign key (pid) references product(pid)
);
